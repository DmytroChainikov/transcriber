# ============================================
# Audio Transcriber Configuration
# Скопіюйте цей файл як .env та заповніть своїми даними
# ============================================

# ============================================
# Gemini API Configuration
# ============================================
# Отримайте API ключ: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# ============================================
# Google Cloud Configuration
# ============================================
# Шлях до JSON файлу з Service Account credentials
# Інструкція: https://console.cloud.google.com/iam-admin/serviceaccounts
# 1. Створіть Service Account
# 2. Завантажте JSON ключ
# 3. Надайте доступ до Google Drive папки та Google Sheets документу
GOOGLE_CREDENTIALS_PATH=credentials/service-account-credentials.json

# ============================================
# Google Drive & Sheets
# ============================================
# ID папки на Google Drive з аудіо файлами
# Як знайти: відкрийте папку в браузері, ID в URL після /folders/
# Приклад URL: https://drive.google.com/drive/folders/1a2B3c4D5e6F7g8H9i0J
# ID: 1a2B3c4D5e6F7g8H9i0J
DRIVE_FOLDER_ID=your_drive_folder_id_here

# ID Google Sheets документу
# Як знайти: відкрийте таблицю в браузері, ID в URL після /d/
# Приклад URL: https://docs.google.com/spreadsheets/d/1A2b3C4d5E6f7G8h9I0j/edit
# ID: 1A2b3C4d5E6f7G8h9I0j
SPREADSHEET_ID=your_spreadsheet_id_here

# Назва аркушу (worksheet) в Google Sheets
# Залиште порожнім для використання першого аркушу
WORKSHEET_NAME=

# ============================================
# Локальне збереження транскриптів
# ============================================
# Папка для збереження транскриптів локально (на вашому комп'ютері)
LOCAL_TRANSCRIPTS_FOLDER=transcripts

# ============================================
# Загальні налаштування
# ============================================
# Інтервал перевірки нових файлів (в секундах)
CHECK_INTERVAL_SEC=60

# Підтримувані формати аудіо файлів
SUPPORTED_FORMATS=.mp3,.wav,.m4a,.aac,.ogg

# Максимальний розмір файлу в MB
MAX_FILE_SIZE_MB=20
CHECK_INTERVAL_SEC=60

# ============================================
# Local Mode (для WORK_MODE=local)
# ============================================
# Папка для локальних аудіо файлів
AUDIO_FOLDER=google_folder

# Шлях до Excel шаблону
EXCEL_TEMPLATE_PATH=google_folder/Звіт прослуханих розмов.xlsx

# Увімкнути Excel обробку
ENABLE_EXCEL_PROCESSING=false

# Директорія для результатів
EXCEL_OUTPUT_DIR=excel_output

# Пакетна обробка при старті
ENABLE_BATCH_PROCESSING=false

# ============================================
# General Configuration
# ============================================
# Підтримувані аудіо формати (через кому)
SUPPORTED_FORMATS=.mp3,.wav,.m4a,.aac,.ogg

# Максимальний розмір файлу (в MB)
MAX_FILE_SIZE_MB=20